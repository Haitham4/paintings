<p id="notice"><%= notice %></p>



<div class="container">
  <div style="display: block; text-align: center">  <h1>Listing Paintings</h1> </div>
  <div class = row>
    <% @paintings.each do |painting| %>
        <div class="col-sm-4">
          <div class="thumbnail">
            <%= image_tag painting.image.url, alt: "None" %>
            <!-- <img src="http://www.hdwallpapers.in/walls/some_are_different-wide.jpg" alt="..."> -->
            <div class="caption">
              <h3> <%= painting.title%> </h3>
              <p> <%= painting.description %> </p>
              <div class="row">
                <div class="col-sm-3">  <%= button_to 'Show', painting, class: 'btn btn-primary', method: :get%> </div>
                <div class="col-sm-2"> <%= button_to 'Edit', edit_painting_path(painting), class: 'btn btn-default', method: :get%> </div>
                <div class="col-sm-2"> <%= button_to 'Delete', painting, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }%> </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>


  <br>

  <%= button_to 'New Painting', new_painting_path, class: 'btn btn-default', method: :get %>
</div>